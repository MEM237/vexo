{
  "manifest_version": 3,
  "name": "VEXO Escalator",
  "version": "1.0",
  "description": "A Chrome extension for video and text communication.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Open VEXO",
    "default_popup": "src/html/popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "src/js/background.js"
  }
}


