{
    "manifest_version": 3,
    "name": "VEXO Escalator",
    "version": "1.0",
    "description": "Peer-to-peer video and text relay with AI integration.",
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs",
      "camera"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "src/js/background.js"
    },
    "action": {
      "default_popup": "src/html/popup.html",
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["src/js/content.js"],
        "css": ["src/css/content.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/placeholders/placeholder0.jpg",
          "icon-16.png",
          "icon-48.png",
          "icon-128.png"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  